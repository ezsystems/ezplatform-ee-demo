<div class="block-contentlist__card block-contentlist__card--grid">
    <div class="block-contentlist__card-image">
        {{ ez_render_field(content, 'image', {
            parameters: {
                alias: 'original',
                class: 'card-img img-fluid w-100'
            }
        }) }}
    </div>
    <div class="block-contentlist__content-wrapper">
        <h2 class="block-contentlist__card-title">
            <a class="block-contentlist__card-link" href="{{ path( location ) }}" >
                {{ ez_content_name( content ) }}
            </a>
        </h2>
        <div class="block-contentlist__card-body">
            {{ ez_render_field(content, 'intro') }}
        </div>
    </div>
</div>
